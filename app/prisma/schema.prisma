generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model Users {
  id        String      @id @default(uuid())
  username  String      @unique @db.VarChar(30)
  password  String
  todoLists TodoLists[]
}

model TodoLists {
  id         String     @id @default(uuid())
  title      String
  created_at DateTime   @default(now())
  userId     String
  owner      Users      @relation(fields: [userId], references: [id])
  description String
  status     Status     @default(PENDING)
  TodoItem   TodoItem[]
}

model TodoItem {
  id         String    @id @default(uuid())
  title      String
  created_at DateTime  @default(now())
  Description String
  listId     String
  list       TodoLists @relation(fields: [listId], references: [id])
  status     Status    @default(PENDING)
}
